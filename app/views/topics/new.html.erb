<h1>Create a New Topic</h1>

<%= form_for [@topic] do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_area :title, class: 'form-control', placeholder: "Enter topic here" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

<% end %>